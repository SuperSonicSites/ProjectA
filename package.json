{
  "name": "visual-sanctuary",
  "version": "1.0.0",
  "description": "Visual Sanctuary Static Site",
  "scripts": {
    "dev": "npm run build:css && hugo server --disableFastRender",
    "build:css": "tailwindcss -i ./themes/visual-sanctuary-theme/assets/css/main.css -o ./static/css/main.css --minify",
    "build": "npm run build:css && hugo --minify && npx pagefind --site public",
    "preview": "npm run build && npx wrangler pages dev public"
  },
  "dependencies": {
    "alpinejs": "^3.13.3",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "postcss-cli": "^11.0.0",
    "tailwindcss": "^3.4.0"
  },
  "devDependencies": {
    "@aws-sdk/client-s3": "^3.948.0",
    "@google/generative-ai": "^0.24.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "fs-extra": "^11.3.2",
    "glob": "^13.0.0",
    "matter-js": "^0.20.0",
    "pagefind": "^1.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
