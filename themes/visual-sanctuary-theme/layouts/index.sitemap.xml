{{ printf "<?xml version=\"1.0\" encoding=\"utf-8\" standalone=\"yes\"?>" | safeHTML }}
<sitemapindex xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  {{/* Include regular pages sitemap (home, about, contact, privacy, terms) */}}
  <sitemap>
    <loc>{{ .Site.BaseURL }}pages-sitemap.xml</loc>
    <lastmod>{{ now.Format "2006-01-02T15:04:05-07:00" }}</lastmod>
  </sitemap>
  {{/* Include section sitemaps, excluding the pages section */}}
  {{ range .Site.Sections }}
    {{ if ne .Section "pages" }}
      {{ if .Sections }}
        {{/* Section has subsections - reference them directly to avoid nested indexing */}}
        {{ range .Sections }}
        {{- $htmlFormat := .OutputFormats.Get "HTML" -}}
        <sitemap>
          <loc>{{ with $htmlFormat }}{{ .Permalink }}{{ end }}sitemap.xml</loc>
          <lastmod>{{ .Date.Format "2006-01-02T15:04:05-07:00" }}</lastmod>
        </sitemap>
        {{ end }}
      {{ else }}
        {{/* Section has no subsections - reference it directly */}}
        {{- $htmlFormat := .OutputFormats.Get "HTML" -}}
        <sitemap>
          <loc>{{ with $htmlFormat }}{{ .Permalink }}{{ end }}sitemap.xml</loc>
          <lastmod>{{ .Date.Format "2006-01-02T15:04:05-07:00" }}</lastmod>
        </sitemap>
      {{ end }}
    {{ end }}
  {{ end }}
</sitemapindex>

